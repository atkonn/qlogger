<?xml version="1.0" encoding="utf-8" ?>

<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item
    android:state_enabled="false"
    >
    <bitmap
      android:src="@drawable/btn_action_bar_send_disabled"
      android:gravity="center" 
      />
  </item>
  <item
    android:state_pressed="true"
    >
    <layer-list>
      <item>
        <shape>
          <solid 
            android:color="#FF2bcdff" />
          <corners
            android:radius="10dip" />
        </shape>
      </item>
      <item>
        <bitmap
          android:src="@drawable/btn_action_bar_send" 
          android:gravity="center" 
          />
      </item>
    </layer-list>
  </item>
  <item>
    <bitmap
      android:src="@drawable/btn_action_bar_send"
      android:gravity="center" 
      />
  </item>
</selector>
