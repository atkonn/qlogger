<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout 
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
  <LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    android:padding="10dip" >
    <TableLayout
      android:layout_width="0dip"
      android:layout_height="fill_parent"
      android:layout_weight="1" >
      <TableRow
        android:layout_height="0dip"
        android:layout_weight="0.5" >
        <include
          layout="@layout/dashboard_item_rebootlog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_logcat"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_errorlog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_batterylog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_screenlog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
      </TableRow>
      <TableRow
        android:layout_height="0dip"
        android:layout_weight="0.5" >
        <include
          layout="@layout/dashboard_item_loadavglog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_cpuutilizationlog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_memutilizationlog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_netstatlog"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
        <include
          layout="@layout/dashboard_item_dummy"
          android:layout_width="0dip"
          android:layout_height="wrap_content"
          android:padding="5dip" 
          android:layout_margin="5dip"
          android:layout_weight="1" />
      </TableRow>
    </TableLayout>
  </LinearLayout>
  <include
    android:gravity="right"
    android:layout_gravity="right"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    layout="@layout/dashboard_admob" 
    />
</LinearLayout>
