<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="@dimen/height_of_footer_bar"
  android:paddingLeft="5dip"
  android:paddingRight="5dip"
  style="@style/CustomWindowTitleBackground"
  >
  <LinearLayout
    android:id="@+id/action_bar_reload"
    android:onClick="gotoReload"
    style="@style/FooterBarLinearLayout">
    <TextView
      android:id="@+id/action_bar_reload"
      android:gravity="center"
      android:text="@string/menu_reload"
      android:drawableTop="@drawable/action_bar_reload"
      style="@style/FooterBarNavigation" />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/action_bar_setting"
    android:onClick="gotoSetting"
    style="@style/FooterBarLinearLayout">
    <TextView
      android:id="@+id/action_bar_setting"
      android:gravity="center"
      android:text="@string/menu_setting"
      android:drawableTop="@drawable/action_bar_setting"
      style="@style/FooterBarNavigation" />
  </LinearLayout>
</LinearLayout>
